{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JH Agent Factory Skill Schema",
  "description": "에이전트 스킬 JSON 표준 스키마. 모든 .skill.json 파일은 이 스키마를 따른다.",
  "type": "object",
  "required": ["skill_id", "name", "version", "description", "category", "inputs", "outputs", "safety_rules"],
  "properties": {
    "skill_id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$",
      "description": "스킬 고유 식별자 (소문자+밑줄)"
    },
    "name": {
      "type": "string",
      "description": "사람이 읽을 수 있는 스킬 이름"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "시맨틱 버전 (예: 1.0.0)"
    },
    "description": {
      "type": "string",
      "description": "스킬의 목적과 기능 요약"
    },
    "category": {
      "type": "string",
      "enum": ["filesystem", "terminal", "git", "coding", "monitoring", "network", "data", "ai", "automation", "memory", "factory", "utility"],
      "description": "스킬 분류"
    },
    "dependencies": {
      "type": "array",
      "items": { "type": "string" },
      "default": [],
      "description": "필요한 외부 패키지 목록"
    },
    "cost": {
      "type": "string",
      "enum": ["free", "paid"],
      "default": "free"
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type", "description"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["string", "number", "boolean", "array", "object"] },
          "description": { "type": "string" },
          "required": { "type": "boolean", "default": true }
        }
      },
      "description": "스킬 입력 파라미터 목록"
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type", "description"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "description": { "type": "string" }
        }
      },
      "description": "스킬 출력 목록"
    },
    "safety_rules": {
      "type": "array",
      "items": { "type": "string" },
      "description": "이 스킬 사용 시 반드시 준수할 안전 규칙"
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "input": { "type": "object" },
          "expected_output": { "type": "object" }
        }
      },
      "description": "스킬 사용 예시"
    },
    "prompt": {
      "type": "string",
      "description": "스킬 실행 시 사용할 시스템 프롬프트"
    }
  },
  "additionalProperties": false
}
